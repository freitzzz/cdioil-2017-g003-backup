<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context=".application.CheckReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answersGivenTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/zxing_possible_result_points"
            android:fontFamily="@font/roboto_mono_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/question_answer_list"
            android:textColor="#3D3D3D"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/questionAnswerListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:padding="8dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>