<?xml version="1.0" encoding="UTF-8"?>
<feedbackmonkeyapi entrypoint="/feedbackmonkeyapi">
    <resources>
        <resource name="Authentication" path="/authentication">
            <subresources>
                <subresource name="Login" path="/login">
                    <method>POST</method>
                    <datatype>JSON</datatype>
                </subresource>
                <subresource name="Activate Account" path="/activate">
                    <method>POST</method>
                    <datatype>JSON</datatype>
                </subresource>
                <subresouce name="Register Account" path="/register">
                    <method>POST</method>
                    <datatype>JSON</datatype>
                </subresouce>
            </subresources>
        </resource>
        <resource name="Surveys" path="/surveys">
            <subresources>
                <subresource name="Available User Surveys" path="/useravailablesurveys/">
                    <method>GET</method>
                    <datatype>JSON</datatype>
                </subresource>
                <subresource name="Available Surveys By Product Code" path="/getSurveysByProductCode/">
                    <method>GET</method>
                    <datatype>JSON</datatype>
                </subresource>
            </subresources>
        </resource>
        <resource name = "Reviews" path = "/reviews">
            <subresources>
                <subresource name = "Create New Review" path = "/newreview">
                    <method>GET</method>
                    <datatype>XML</datatype>
                    <datatype>JSON</datatype>
                </subresource>
            </subresources>
        </resource>
    </resources>
</feedbackmonkeyapi>
