<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cdioil.feedbackmonkey">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--Enable hardware acceleration, since ZXing uses TextureView-->
    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".authz.LoginActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".authz.BinaryQuestion"  />
        <activity android:name=".authz.QuantitativeQuestion"/>
        <activity android:name=".authz.MultipleQuestion" />
        <activity android:name=".application.ListSurveyActivity"/>
        <activity android:name=".application.MainMenuActivity"/>
    </application>
</manifest>